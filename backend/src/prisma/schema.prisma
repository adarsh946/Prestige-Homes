generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id              String  @id @default(auto()) @map("_id") @db.ObjectId
  fullname        String
  email           String   @unique
  password        String   
  avatar          String
  createdAt       DateTime @default(now())
  posts           Posts[]
}

model Posts {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  title          String
  price          Int
  image          String
  address        String
  city           String
  bedroom        Int
  bathroom       Int
  latitude       Int
  logitude       Int
  type           Type
  property       Property
  user           User   @relation(fields: [userId], references: [id])
  userId         String   @db.ObjectId

}

enum Type {
  buy
  rent
}

enum Property {
  flat
  condo
  land
  house
}